<% if !notice.blank? %>
 <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-25">Fname</th>
      <th class="w-25">Lname</th>
      <th class="w-25">Email</th>
      <th class="w-25">Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="w-25"><%= user.fname %></td>
        <td class="w-25"><%= user.lname %></td>
        <td class="w-25"><%= user.email %></td>
        <td class="w-25"><%= user.thumbnail %></td>
        
      <td class="w-25">
    <%= link_to user, class: "btn btn-default btn-sm" do %>
      Show
      <% end %>
    </td>
     <td class="w-25">  
    <%= link_to edit_user_path(user), class: "btn btn-default btn-sm" do %>
    Edit
    <% end %>
  </td>
     <td class="w-25">
    <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
 Delete
 <% end %>
 </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path ,class:"btn btn-primary"%>
